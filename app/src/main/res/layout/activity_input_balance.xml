<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputBalanceActivity">

    <!--    HEADER-->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:background="@color/green_primary"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Isi Saldo"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnNext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp">

                    <!-- Donator image -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="30dp">
                        <ImageView
                            android:id="@+id/imageDonator"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/campaign_yatim"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Donator name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Christian Iwan"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"/>

                    <!-- Spacer to push saldo to the right -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <!-- Sisa Saldo section -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sisa saldo:"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp8.000"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/edit_text_background2"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            android:layout_marginEnd="4dp" />

                        <EditText
                            android:id="@+id/editTextSaldo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:inputType="number"
                            android:hint="Masukkan jumlah"
                            android:textSize="24sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:background="@android:color/transparent"
                            android:maxLines="1"/>
                    </LinearLayout>


                    <!-- Quick choices grid -->
                    <GridLayout
                        android:id="@+id/quick_choice_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:rowCount="2"
                        android:alignmentMode="alignMargins"
                        android:rowOrderPreserved="false">

                        <!-- Quick choice buttons -->
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_columnSpan="1"
                            android:layout_gravity="fill"
                            android:text="Rp50.000"
                            android:textAllCaps="false"
                            android:padding="8dp"
                            android:tag="50000"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:text="Rp75.000"
                            android:textAllCaps="false"
                            android:padding="8dp"
                            android:tag="75000"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:text="Rp100.000"
                            android:textAllCaps="false"
                            android:padding="8dp"
                            android:tag="100000"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:text="Rp150.000"
                            android:textAllCaps="false"
                            android:padding="8dp"
                            android:tag="150000"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:text="Rp200.000"
                            android:textAllCaps="false"
                            android:padding="8dp"
                            android:tag="200000"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:text="Rp300.000"
                            android:textAllCaps="false"
                            android:padding="8dp"
                            android:tag="300000"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                    </GridLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        android:background="@color/white"
        android:elevation="2dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDonasiSekarang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Lanjut ke Pembayaran"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/green_primary"
            android:textSize="16dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:background="@drawable/bg_dialog_rounded"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>