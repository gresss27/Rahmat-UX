<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background"
    tools:context=".UserFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/greenBackgroundCard"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:layout_marginTop="-20dp"
            android:backgroundTint="@color/green_primary"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="0dp" />

        <ImageView
            android:id="@+id/settingIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_setting"
            android:contentDescription="Setting Icon"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="180dp"
            android:layout_height="180dp"

            android:contentDescription="Profile Image"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:background="@drawable/profile"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Green Alien"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:textFontWeight="700"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/profileImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/editProfile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit"
            android:paddingTop="4dp"
            android:contentDescription="Edit Profile"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/userNameTextView"
            app:layout_constraintStart_toEndOf="@id/userNameTextView"/>

        <TextView
            android:id="@+id/userJobTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pegawai Bank"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/userNameTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/userEmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rahmat.hidayat@example.com"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/userJobTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/balanceCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="36dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/userEmailTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <!-- Isi balance card tetap sama -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/totalBalanceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Saldo"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textFontWeight="700"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/idrPrefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IDR"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_bold"
                    android:textFontWeight="700"
                    android:background="@drawable/ic_idr"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/totalBalanceLabel"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/totalBalanceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.000.000"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_bold"
                    android:textFontWeight="700"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/totalBalanceLabel"
                    app:layout_constraintStart_toEndOf="@id/idrPrefix"/>

                <ImageView
                    android:id="@+id/calendarIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calendar"
                    android:contentDescription="Calendar Icon"
                    app:tint="@color/grey_font"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/totalBalanceValue"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/activeSince"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aktif Sejak 24/25"
                    android:textSize="12sp"
                    android:textColor="@color/grey_font"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@id/calendarIcon"
                    app:layout_constraintBottom_toBottomOf="@id/calendarIcon"
                    app:layout_constraintStart_toEndOf="@id/calendarIcon"/>

                <Button
                    android:id="@+id/topUpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Isi Saldo"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_bold"
                    android:textFontWeight="700"
                    android:backgroundTint="@color/green_primary"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:minHeight="0dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_add"
                    app:iconTint="#000000"
                    app:iconPadding="8dp"
                    app:layout_constraintTop_toTopOf="@id/calendarIcon"
                    app:layout_constraintBottom_toBottomOf="@id/activeSince"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_bias="0.5"
                    android:layout_marginBottom="0dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/secondImageBoxCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/balanceCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/column1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/divider1"
                    app:layout_constraintHorizontal_weight="1">

                    <ImageView
                        android:id="@+id/icon1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_menunggu"
                        android:contentDescription="Ikon Jam"/>

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Menunggu\nPenyelesaian"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/divider1"
                    android:layout_width="4dp"
                    android:layout_height="90dp"
                    android:background="@drawable/rounded_separator"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/column1"
                    app:layout_constraintEnd_toStartOf="@+id/column2"
                    app:layout_constraintHeight_percent="0.8"
                    app:layout_constraintVertical_bias="0.5"/>

                <LinearLayout
                    android:id="@+id/column2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/divider1"
                    app:layout_constraintEnd_toStartOf="@+id/divider2"
                    app:layout_constraintHorizontal_weight="1">

                    <ImageView
                        android:id="@+id/icon2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_statusdonasi"
                        android:contentDescription="Ikon Truk"/>

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status\nDonasi"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/divider2"
                    android:layout_width="4dp"
                    android:layout_height="90dp"
                    android:background="@drawable/rounded_separator"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/column2"
                    app:layout_constraintEnd_toStartOf="@+id/column3"
                    app:layout_constraintHeight_percent="0.8"
                    app:layout_constraintVertical_bias="0.5"/>

                <LinearLayout
                    android:id="@+id/column3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/divider2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1">

                    <ImageView
                        android:id="@+id/icon3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_riwayat"
                        android:contentDescription="Ikon Riwayat"/>

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Riwayat\nDonasi"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/judulstatistik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statistik"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_medium"
            android:textFontWeight="700"
            android:layout_marginTop="24dp"
            android:gravity="start"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/secondImageBoxCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/centeredImageBelowSecondBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/grafik"
            android:contentDescription="Gambar tengah di bawah box kedua"
            android:scaleType="fitCenter"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@id/judulstatistik"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>