                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintTop_toTopOf="@id/labelPembayaranMelalui"
                        app:layout_constraintStart_toEndOf="@id/labelPembayaranMelalui"/>

                    <TextView
                        android:id="@+id/labelStatusPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
