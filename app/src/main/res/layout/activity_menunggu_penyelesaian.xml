                        app:layout_constraintTop_toTopOf="@id/labelStatusPayment"
                        app:layout_constraintStart_toEndOf="@id/labelStatusPayment"/>

                    <TextView
                        android:id="@+id/labelTotalDonasiPayment"
                        android:layout_width="wrap_content"
