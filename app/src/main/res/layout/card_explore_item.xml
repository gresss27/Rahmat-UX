<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="190dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_marginRight="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:strokeColor="@android:color/transparent">

            <ImageView
                android:id="@+id/campaignImage"
                android:layout_width="220dp"
                android:layout_height="95dp"
                android:src="@drawable/banner3"
                android:contentDescription="Campaign Image"
                android:scaleType="centerCrop" />
        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/campaignDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Akses Nutrisi Masih Terbatas, Donasi Beras Sekarang! Bantu Pulihkan Masa Depan Mereka"
            android:textSize="9dp"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginBottom="4dp"
            android:gravity="start"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start">
                <TextView
                    android:id="@+id/terkumpulText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terkumpul"
                    android:textSize="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:id="@+id/terkumpulAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp13.440.231"
                    android:textSize="8dp"
                    android:textColor="#9EC43E"
                    android:fontFamily="@font/poppins_bold"
                    android:textFontWeight="700"
                    android:layout_marginStart="4dp"/> <!-- Menambahkan sedikit margin -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end">
                <TextView
                    android:id="@+id/targetText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target"
                    android:textSize="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:id="@+id/targetAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp300.000.000"
                    android:textSize="8dp"
                    android:textColor="#9EC43E"
                    android:fontFamily="@font/poppins_bold"
                    android:textFontWeight="700"
                    android:layout_marginStart="4dp"/> <!-- Menambahkan sedikit margin -->
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/campaignProgress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:progress="50"
            android:indeterminate="false"
            android:progressDrawable="@drawable/card_explore_progressbar"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
