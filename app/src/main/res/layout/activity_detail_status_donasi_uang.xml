<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/main"
    tools:context=".DonationDetailActivity">

    <!-- Top Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topBarCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/green_primary">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Tombol Kembali"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Donasi"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"
                android:textFontWeight="700"
                app:layout_constraintStart_toEndOf="@id/backButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Scrollable Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBarCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card Donasi Pembayaran -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iconPayment"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_transaksi_uang"
                        android:contentDescription="Ikon Pembayaran"
                        android:background="@drawable/ic_notification_bg"
                        android:padding="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/idDonasiPayment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="ID Donasi: TR2702330052025"
                        android:textSize="14dp"
                        android:fontFamily="@font/poppins_bold"
                        android:textFontWeight="700"
                        android:layout_marginStart="12dp"
                        app:layout_constraintTop_toTopOf="@id/iconPayment"
                        app:layout_constraintStart_toEndOf="@id/iconPayment"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tanggalPayment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Tanggal: 14 Juli 2025"
                        android:textSize="12sp"
                        android:textColor="@color/grey_font"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="0dp"
                        app:layout_constraintTop_toBottomOf="@id/idDonasiPayment"
                        app:layout_constraintStart_toEndOf="@id/iconPayment"
                        app:layout_constraintEnd_toEndOf="parent"/>


                    <TextView
                        android:id="@+id/labelPembayaranMelaluiDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pembayaran Melalui:"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins_bold"
                        android:textFontWeight="700"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tanggalPayment"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/pembayaranMelaluiDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BCA Virtual Account"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="1dp"
                        app:layout_constraintTop_toBottomOf="@id/labelPembayaranMelaluiDetail"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/nomorVA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2345876543213"
                        android:textSize="12sp"
                        android:textColor="#A4A4A4"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="1dp"
                        app:layout_constraintTop_toBottomOf="@id/pembayaranMelaluiDetail"
                        app:layout_constraintStart_toStartOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Status Donasi (Timeline) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/statusDonasiTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status Donasi"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins_bold"
                        android:textFontWeight="700"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <!-- Item 1: Dana disalurkan -->
                    <ImageView
                        android:id="@+id/circle1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/circle_green_solid"
                        app:layout_constraintTop_toBottomOf="@id/statusDonasiTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="8dp"/>

                    <LinearLayout
                        android:id="@+id/textGroup1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/statusDonasiTitle"
                        app:layout_constraintStart_toEndOf="@id/circle1"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/statusText1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dana disalurkan"
                            android:textSize="12sp"
                            android:textColor="#000000"
                            android:fontFamily="@font/poppins_medium"/>

                        <TextView
                            android:id="@+id/statusDate1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="17 Juli 2025"
                            android:textSize="10sp"
                            android:textColor="@color/grey_font"
                            android:fontFamily="@font/poppins_regular"/>
                    </LinearLayout>

                    <View
                        android:id="@+id/line1"
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:background="@color/green_primary"
                        app:layout_constraintTop_toTopOf="@id/circle1"
                        app:layout_constraintBottom_toTopOf="@id/circle2"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintHeight_min="24dp"/>

                    <!-- Item 2: Dana donasi menunggu target penyaluran -->
                    <ImageView
                        android:id="@+id/circle2"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/circle_green_solid"
                        app:layout_constraintTop_toBottomOf="@id/textGroup1"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="8dp"/>

                    <LinearLayout
                        android:id="@+id/textGroup2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="@id/circle2"
                        app:layout_constraintBottom_toBottomOf="@id/circle2"
                        app:layout_constraintStart_toEndOf="@id/circle2"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/statusText2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dana donasi menunggu target penyaluran"
                            android:textSize="12sp"
                            android:textColor="#000000"
                            android:fontFamily="@font/poppins_medium"/>

                        <TextView
                            android:id="@+id/statusDate2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="17 Juli 2025"
                            android:textSize="10sp"
                            android:textColor="@color/grey_font"
                            android:fontFamily="@font/poppins_regular"/>
                    </LinearLayout>

                    <View
                        android:id="@+id/line2"
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:background="@color/green_primary"
                        app:layout_constraintTop_toBottomOf="@id/circle2"
                        app:layout_constraintBottom_toTopOf="@id/circle3"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="0dp"
                        app:layout_constraintHeight_min="24dp"/>


                    <!-- Item 3: Dana diverifikasi -->
                    <ImageView
                        android:id="@+id/circle3"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/circle_green_solid"
                        app:layout_constraintTop_toBottomOf="@id/textGroup2"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="8dp"/>

                    <LinearLayout
                        android:id="@+id/textGroup3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="@id/circle3"
                        app:layout_constraintBottom_toBottomOf="@id/circle3"
                        app:layout_constraintStart_toEndOf="@id/circle3"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/statusText3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dana diverifikasi"
                            android:textSize="12sp"
                            android:textColor="#000000"
                            android:fontFamily="@font/poppins_medium"/>

                        <TextView
                            android:id="@+id/statusDate3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="17 Juli 2025"
                            android:textSize="10sp"
                            android:textColor="@color/grey_font"
                            android:fontFamily="@font/poppins_regular"/>
                    </LinearLayout>

                    <View
                        android:id="@+id/line3"
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:background="@color/green_primary"
                        app:layout_constraintTop_toBottomOf="@id/circle3"
                        app:layout_constraintBottom_toTopOf="@id/circle4"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="0dp"
                        app:layout_constraintHeight_min="24dp"/>

                    <!-- Item 4: Dana donasi diterima -->
                    <ImageView
                        android:id="@+id/circle4"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/circle_green_solid"
                        app:layout_constraintTop_toBottomOf="@id/textGroup3"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="8dp"/>

                    <LinearLayout
                        android:id="@+id/textGroup4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="@id/circle4"
                        app:layout_constraintBottom_toBottomOf="@id/circle4"
                        app:layout_constraintStart_toEndOf="@id/circle4"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/statusText4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dana donasi diterima"
                            android:textSize="12sp"
                            android:textColor="#000000"
                            android:fontFamily="@font/poppins_medium"/>

                        <TextView
                            android:id="@+id/statusDate4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="17 Juli 2025"
                            android:textSize="10sp"
                            android:textColor="@color/grey_font"
                            android:fontFamily="@font/poppins_regular"/>
                    </LinearLayout>

                    <View
                        android:id="@+id/line4"
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:background="@color/green_primary"
                        app:layout_constraintTop_toBottomOf="@id/circle4"
                        app:layout_constraintBottom_toTopOf="@id/circle5"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="0dp"
                        app:layout_constraintHeight_min="24dp"/>

                    <!-- Item 5: Menunggu konfirmasi dana donasi -->
                    <ImageView
                        android:id="@+id/circle5"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/circle_green_solid"
                        app:layout_constraintTop_toBottomOf="@id/textGroup4"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="8dp"/>

                    <LinearLayout
                        android:id="@+id/textGroup5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="@id/circle5"
                        app:layout_constraintBottom_toBottomOf="@id/circle5"
                        app:layout_constraintStart_toEndOf="@id/circle5"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/statusText5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Menunggu konfirmasi dana donasi"
                            android:textSize="12sp"
                            android:textColor="#000000"
                            android:fontFamily="@font/poppins_medium"/>

                        <TextView
                            android:id="@+id/statusDate5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="17 Juli 2025"
                            android:textSize="10sp"
                            android:textColor="@color/grey_font"
                            android:fontFamily="@font/poppins_regular"/>
                    </LinearLayout>

                    <View
                        android:id="@+id/line5"
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:background="@color/green_primary"
                        app:layout_constraintTop_toBottomOf="@id/circle5"
                        app:layout_constraintBottom_toTopOf="@id/circle6"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="0dp"
                        app:layout_constraintHeight_min="24dp"/>

                    <!-- Item 6: Donasi dibuat -->
                    <ImageView
                        android:id="@+id/circle6"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/circle_green_solid"
                        app:layout_constraintTop_toBottomOf="@id/textGroup5"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="8dp"/>

                    <LinearLayout
                        android:id="@+id/textGroup6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="@id/circle6"
                        app:layout_constraintBottom_toBottomOf="@id/circle6"
                        app:layout_constraintStart_toEndOf="@id/circle6"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/statusText6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Donasi dibuat"
                            android:textSize="12sp"
                            android:textColor="#000000"
                            android:fontFamily="@font/poppins_medium"/>

                        <TextView
                            android:id="@+id/statusDate6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="17 Juli 2025"
                            android:textSize="10sp"
                            android:textColor="@color/grey_font"
                            android:fontFamily="@font/poppins_regular"/>
                    </LinearLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
