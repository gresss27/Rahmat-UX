<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="12dp"
android:background="@drawable/rounded_card_bg"
android:layout_marginBottom="8dp">

    <!-- Thumbnail -->
    <ImageView
        android:id="@+id/imgCampaignThumbnail"
        android:layout_width="142dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_thumbnail"
        android:layout_gravity="center_vertical" />

<LinearLayout
    android:orientation="vertical"
    android:layout_marginStart="12dp"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <TextView
        android:id="@+id/tvCampaignTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Judul Kampanye"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="start">
            <TextView
                android:id="@+id/terkumpulText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terkumpul"
                android:textSize="7dp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_medium"/>

            <TextView
                android:id="@+id/tvCampaignCollected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp13.440.231"
                android:textSize="7dp"
                android:textColor="#9EC43E"
                android:fontFamily="@font/poppins_bold"
                android:textFontWeight="700"
                android:layout_marginStart="4dp"/> <!-- Menambahkan sedikit margin -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="end">
            <TextView
                android:id="@+id/targetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Target"
                android:textSize="7dp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_medium"/>

            <TextView
                android:id="@+id/tvCampaignTarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp300.000.000"
                android:textSize="7dp"
                android:textColor="#9EC43E"
                android:fontFamily="@font/poppins_bold"
                android:textFontWeight="700"
                android:layout_marginStart="4dp"/> <!-- Menambahkan sedikit margin -->
        </LinearLayout>
    </LinearLayout>
    <!-- Progress bar -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:progress="50"
            android:progressDrawable="@drawable/progress_green" />

        <TextView
            android:id="@+id/tvRemainingDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sisa 76 hari"
            android:textSize="10sp"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="end|bottom"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="4dp" />
    </FrameLayout>
</LinearLayout>
</LinearLayout>

