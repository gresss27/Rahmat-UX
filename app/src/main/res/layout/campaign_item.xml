<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="12dp"
android:background="@drawable/rounded_card_bg"
android:layout_marginBottom="8dp">

<ImageView
    android:id="@+id/imgCampaignThumbnail"
    android:layout_width="72dp"
    android:layout_height="72dp"
    android:scaleType="centerCrop"
    android:src="@drawable/sample_thumbnail"/>

<LinearLayout
    android:orientation="vertical"
    android:layout_marginStart="12dp"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <TextView
        android:id="@+id/tvCampaignTitle"
        android:text="Judul Kampanye"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <TextView
        android:id="@+id/tvCampaignStatus"
        android:text="Terkumpul: Rp1.000.000 / Rp2.000.000"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:progress="50"
        android:layout_marginTop="4dp"
        android:progressDrawable="@drawable/progress_green"/>

    <TextView
        android:id="@+id/tvRemainingDays"
        android:text="Sisa 7 hari"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
</LinearLayout>
</LinearLayout>

