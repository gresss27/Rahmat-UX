<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".SocialFragment"> <Button
    android:id="@+id/button_load_data"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Load Data dari Repository" />

    <ImageView
        android:id="@+id/image_view_organizer_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_view_donation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="[Judul Donasi Akan Tampil di Sini]"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_organizer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="[Nama Penyelenggara]"
        android:textSize="16sp" />

</LinearLayout>