<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UrgentFragment"
    android:background="@color/background">

    <!-- Top bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profileCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp">

        <ImageView
            android:id="@+id/icon_kiri"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/profile"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:contentDescription="Profile icon"
            android:background="@drawable/circle_shape_profile"
            android:clickable="true"
            android:focusable="true" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="35dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="20dp"
        app:strokeWidth="0dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintStart_toEndOf="@id/profileCard"
        app:layout_constraintEnd_toStartOf="@id/notif"
        app:layout_constraintTop_toTopOf="@id/profileCard"
        app:layout_constraintBottom_toBottomOf="@id/profileCard">
        <EditText
            android:id="@+id/kolom_pencarian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_search_bar_bg"
            android:drawableRight="@drawable/ic_search"
            android:hint="Coba cari &quot;Banjir Bandang&quot;"
            android:paddingStart="16dp"
            android:textSize="12sp"
            android:gravity="center_vertical|start"
            android:ellipsize="end"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:inputType="text"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/profileCard"
        app:layout_constraintBottom_toBottomOf="@id/profileCard"
        android:layout_marginEnd="16dp">
        <ImageView
            android:id="@+id/icon_kanan"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_notif"
            android:background="@drawable/ic_notification_bg"
            android:contentDescription="Ikon notifikasi"
            android:scaleType="centerCrop"
            android:clipToOutline="true"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Urgent campaign card list -->
    <LinearLayout
        android:id="@+id/urgentCard"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/rounded_card_bg"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/profileCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp">

        <ImageView
            android:id="@+id/imgCampaignThumbnail"
            android:layout_width="142dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_thumbnail"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvCampaignTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bantu Korban Banjir Bandang"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="start">
                    <TextView
                        android:id="@+id/terkumpulText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terkumpul"
                        android:textSize="7dp"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:id="@+id/tvCampaignCollected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp50.000.000"
                        android:textSize="7dp"
                        android:textColor="#9EC43E"
                        android:fontFamily="@font/poppins_bold"
                        android:textFontWeight="700"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="end">
                    <TextView
                        android:id="@+id/targetText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Target"
                        android:textSize="7dp"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:id="@+id/tvCampaignTarget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp200.000.000"
                        android:textSize="7dp"
                        android:textColor="#9EC43E"
                        android:fontFamily="@font/poppins_bold"
                        android:textFontWeight="700"
                        android:layout_marginStart="4dp" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:progress="25"
                    android:progressDrawable="@drawable/progress_green" />

                <TextView
                    android:id="@+id/tvRemainingDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sisa 20 hari"
                    android:textSize="10sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_gravity="end|bottom"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="4dp" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
