<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RahmatUX" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- This changes the status bar color -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Optional: force light icons on dark backgrounds -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="NoRippleStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="rippleColor">@android:color/transparent</item>
        <item name="itemIconSize">24dp</item> <!-- or 28dp -->
        <item name="itemTextAppearanceActive">@style/BottomNavTextMultiline</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextMultiline</item>

    </style>
    <style name="BottomNavTextMultiline" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">none</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="Theme.RahmatUX" parent="Base.Theme.RahmatUX" />
</resources>